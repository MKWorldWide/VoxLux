# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C++ files (firmware)
[*.{h,hpp,c,cpp,ino}]
indent_style = space
indent_size = 2
max_line_length = 100

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = tab
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab

# Batch files
[*.{cmd,bat}]
end_of_line = crlf

# Git commit messages
[{COMMIT_EDITMSG,git-rebase-todo}]
charset = utf-8

# Documentation
[*.{adoc,asciidoc}]
trim_trailing_whitespace = false

# License file
[LICENSE*]
insert_final_newline = false

# Don't enforce style on minified files
[*.min.{css,js}]
indent_style = ignore
indent_size = ignore
